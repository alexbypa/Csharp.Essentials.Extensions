{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Debug",
        "System": "Debug"
      }
    },
    "SerilogConfiguration": {
      "ApplicationName": "DemoLogger 9.0",
      "LoggerTelemetryOptions": {
        "Provider": "SqlServer", // or "PostgreSQL"
        "IsEnabled": true,
        "ConnectionString": "YOUR CONNECTION STRING",
        "MeterListenerIsEnabled": true,
        "CustomExporter": {
          "exportIntervalMilliseconds": 20000,
          "exportTimeoutMilliseconds": 30000
        }
      },
      "SerilogCondition": [
        {
          "Sink": "MSSqlServer",
          "Level": [
            "Information",
            "Warning",
            "Error",
            "Fatal"
          ]
        }
      ],
      "SerilogOption": {
        "MSSqlServer": {
          "connectionString": "Data ................",
          "sinkOptionsSection": {
            "tableName": "logs",
            "schemaName": "dbo",
            "autoCreateSqlTable": true,
            "batchPostingLimit": 100,
            "period": "0.00:00:10"
          },
          "columnOptionsSection": {
            "addStandardColumns": [
              "Id",
              "Message",
              "MessageTemplate",
              "Level",
              "Exception",
              "LogEvent"
            ],
            "removeStandardColumns": [
              "Properties"
            ]
          },
          "additionalColumns": [
            {
              "ColumnName": "RenderedMessage",
              "DataType": "NVarChar",
              "DataLength": 4000
            },
            {
              "ColumnName": "IdTransaction",
              "DataType": "VarChar",
              "DataLength": 50
            },
            {
              "ColumnName": "Action",
              "DataType": "VarChar",
              "DataLength": 50

            },
            {
              "ColumnName": "MachineName",
              "DataType": "VarChar",
              "DataLength": 50
            },
            {
              "ColumnName": "ApplicationName",
              "DataType": "VarChar",
              "DataLength": 50
            }
          ]
        }
      }
    }
  }
}